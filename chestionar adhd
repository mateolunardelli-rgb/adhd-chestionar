    label { display:block; margin-bottom:8px; }
    button { display:block; margin:25px auto; padding:12px 25px; background:#06408c; color:white; border:none; border-radius:7px; font-size:17px; cursor:pointer; }
    button:hover { background:#022c63; }
    #rezultat { font-size:19px; text-align:center; font-weight:bold; margin-top:25px; }
</style>
<script>
function calculeaza() {
    let total = 0;
    document.querySelectorAll("input[type='radio']:checked").forEach(el=> total += Number(el.value));

    let mesaj="";
    if(total <= 15) mesaj="Nivel redus de indicii ADHD – posibil doar trăsături izolate.";
    else if(total <= 30) mesaj="Nivel moderat – recomandată evaluarea clinică detaliată.";
    else if(total <= 45) mesaj="Nivel crescut – ADHD este posibil, recomandat consult psihiatric.";
    else mesaj="Nivel foarte ridicat – semne puternice, consult profesional recomandat.";

    document.getElementById("rezultat").innerHTML="Scor: <b>"+total+"</b>/60<br>"+mesaj;
}
</script>
